<!-- Contact Header -->
<section class="bg-indigo-600 text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-bold">Get In Touch</h1>
        <p class="text-xl mt-2 text-indigo-100">I'd love to hear from you. Send me a message!</p>
    </div>
</section>

<!-- Contact Form -->
<section class="py-16">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
        <% if (typeof query !== 'undefined' && query.success === 'true') { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            <p class="font-semibold">Thank you! Your message has been sent successfully.</p>
        </div>
        <% } %>
        
        <div class="bg-white rounded-lg shadow-lg p-8">
            <form action="/contact" method="POST" class="space-y-6">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Name</label>
                    <input type="text" id="name" name="name" required 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                </div>

                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                    <input type="email" id="email" name="email" required 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                </div>

                <div>
                    <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">Subject</label>
                    <input type="text" id="subject" name="subject" required 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                </div>

                <div>
                    <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message</label>
                    <textarea id="message" name="message" rows="6" required 
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"></textarea>
                </div>

                <div>
                    <button type="submit" 
                            class="w-full bg-indigo-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-indigo-700 transition duration-300">
                        Send Message
                    </button>
                </div>
            </form>
        </div>

        <!-- Contact Information -->
        <div class="mt-12 bg-gray-100 rounded-lg p-8">
            <h2 class="text-2xl font-bold mb-6 text-center">Other Ways to Reach Me</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
                <div>
                    <div class="text-indigo-600 text-3xl mb-2">ğŸ“§</div>
                    <h3 class="font-semibold mb-2">Email</h3>
                    <p class="text-gray-600 text-sm">your.email@example.com</p>
                </div>
                <div>
                    <div class="text-indigo-600 text-3xl mb-2">ğŸ’¼</div>
                    <h3 class="font-semibold mb-2">LinkedIn</h3>
                    <p class="text-gray-600 text-sm">linkedin.com/in/yourprofile</p>
                </div>
                <div>
                    <div class="text-indigo-600 text-3xl mb-2">ğŸ™</div>
                    <h3 class="font-semibold mb-2">GitHub</h3>
                    <p class="text-gray-600 text-sm">github.com/yourusername</p>
                </div>
            </div>
        </div>
    </div>
</section>

