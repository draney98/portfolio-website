{
  "name": "node-js-portfolio-website",
  "version": "1.0.0",
  "description": "A modern portfolio website built with Node.js, Express, and Tailwind CSS",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node server.ts",
    "build:css": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --minify"
  },
  "keywords": [
    "portfolio",
    "express",
    "nodejs",
    "tailwindcss"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/node": "^24.10.1",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
